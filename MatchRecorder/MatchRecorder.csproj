<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net471</TargetFramework>
    <Platforms>x86</Platforms>
    <DebugType>full</DebugType>
    <Description>Records Duck Game matches with obs-websockets-dot-net and saves metadata alongside them, use MatchUploader to upload them to your desired repo</Description>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ILRepack" Version="2.0.15" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Shared\Shared.csproj">
      <Private>true</Private>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="0Harmony">
      <HintPath>..\ThirdParty\0Harmony.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="DuckGame">
      <HintPath>..\ThirdParty\DuckGame.exe</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="obs-websocket-dotnet">
      <HintPath>..\ThirdParty\obs-websocket-dotnet.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="websocket-sharp">
      <HintPath>..\ThirdParty\websocket-sharp.dll</HintPath>
      <Private>true</Private>
    </Reference>
  </ItemGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="$(ILRepack) /out:$(ProjectDir)\..\$(SolutionName).dll $(OutDir)\MatchRecorder.dll $(OutDir)\0Harmony.dll $(OutDir)\Newtonsoft.Json.dll $(OutDir)\obs-websocket-dotnet.dll $(OutDir)\websocket-sharp.dll $(OutDir)\Shared.dll $(OutDir)\Flurl.dll" />
  </Target>


</Project>
